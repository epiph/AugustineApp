<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/img_ApprovedFriends_picContainer"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:cardCornerRadius="30dp"
        android:elevation="10dp"

        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        >
        <ImageView
            android:id="@+id/img_ApprovedFriends_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"


            />
    </android.support.v7.widget.CardView>



    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_ApprovedFriends_username"
        android:lines="1"

        android:fontFamily="sans-serif"
        android:textColor="@color/black"
        android:textStyle="bold"


        app:layout_constraintBottom_toTopOf="@+id/tv_ApprovedFriends_status"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintTop_toTopOf="@+id/img_ApprovedFriends_picContainer"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/img_ApprovedFriends_picContainer"
        android:layout_marginLeft="8dp" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_ApprovedFriends_status"
        android:lines="1"

        android:textStyle="italic"
        android:fontFamily="monospace"

        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/img_ApprovedFriends_picContainer"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/img_ApprovedFriends_picContainer" />

</android.support.constraint.ConstraintLayout>